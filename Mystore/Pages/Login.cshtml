@page
@model __NameSpace__.Pages.LoginModel
@{
}


<h3>Login</h3>

<div class="col-6">
    <form method="post">
        @Html.AntiForgeryToken()
        Username:
        <input name="fieldAccount" type="text" class="form-control" />
        <br />
        Password:
        <input name="fieldPwd" type="password" class="form-control" />
        <br />
        <br />
        <button type="submit" asp-page-handler="Login" class="btn btn-primary">Login</button>
        <label>
            @Model.Msg
        </label>
      
    </form>
</div>